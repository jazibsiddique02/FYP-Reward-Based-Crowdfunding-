<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FYP_Reward_Based_Crowdfunding_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*     <link rel="stylesheet" href="~/FYP_Reward_Based_Crowdfunding_.style.css" asp-append-version="true" />
 *@    
    <link href="~/css/Layout.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #003731;">
            <div class="container-fluid">
                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar links -->
                <div class="collapse navbar-collapse d-flex justify-content-around" id="navbarNav">
                    <div class="ps-5">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">Explore</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">View Campaigns</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">About us</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Logo -->

                    <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="d-flex align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="none" viewBox="0 0 40 40"><path fill="#F06225" d="M20 0c11.046 0 20 8.954 20 20v14a6 6 0 0 1-6 6H21v-8.774c0-2.002.122-4.076 1.172-5.78a10 10 0 0 1 6.904-4.627l.383-.062a.8.8 0 0 0 0-1.514l-.383-.062a10 10 0 0 1-8.257-8.257l-.062-.383a.8.8 0 0 0-1.514 0l-.062.383a9.999 9.999 0 0 1-4.627 6.904C12.85 18.878 10.776 19 8.774 19H.024C.547 8.419 9.29 0 20 0Z"></path><path fill="#F06225" d="M0 21h8.774c2.002 0 4.076.122 5.78 1.172a10.02 10.02 0 0 1 3.274 3.274C18.878 27.15 19 29.224 19 31.226V40H6a6 6 0 0 1-6-6V21ZM40 2a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z"></path></svg>
                            <span class="fs-2 mx-2">BackMe</span>
                        </div>
                    </a>

                    <!-- Buttons -->
                    <div class="d-flex ">

                        <partial name="_LoginPartial" />

                        <a asp-controller="Campaign" asp-action="CreateCampaign" class="btn btn-outline-light border-3 px-4 login-div">Start a Campaign</a>

                    </div>
                </div>
            </div>
        </nav>

    </header>


    <div class="container-fluid px-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>







    <footer class="text-white" style="background-color: #002B28; padding: 40px 0;">
        <div class="container">
            <div class="row mb-4">
                <!-- Logo and Tagline -->
                <div class="col-md-12 text-center">
                    <h2 class="fw-bold">BACKME</h2>
                    <p>Connecting Innovators and Supporters for a Better Tomorrow</p>
                </div>
            </div>
            <hr style="border-color: rgba(255, 255, 255, 0.2);">
            <div class="row text-center text-md-start">
                <!-- Discover Section -->
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Discover</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Top-Funded Campaigns</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Tech & Innovation</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Creative Campaigns</a></li>
                    </ul>
                </div>
                <!-- Launch Section -->
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Launch</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Start A Campaign</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Expert Directory</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Enterprise</a></li>
                    </ul>
                </div>
                <!-- Learn Section -->
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Learn</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-white text-decoration-none">How it Works?</a></li>
                        <li><a href="#" class="text-white text-decoration-none">What is Crowdfunding?</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Trust & Safety</a></li>
                    </ul>
                </div>
                <!-- Contact Section -->
                <div class="col-md-3 mb-3">
                    <h5 class="fw-bold">Contact</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Help & Support</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Press</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Careers</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Get In Touch</a></li>
                    </ul>
                </div>
            </div>
            <div class="row text-center mb-4">
                <!-- Social Media Links -->
                <div class="col">
                    <p class="fw-bold mb-2">Follow Us On!</p>
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-youtube"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <hr style="border-color: rgba(255, 255, 255, 0.2);">
            <div class="row text-center">
                <!-- Footer Bottom Text -->
                <div class="col-md-6">
                    <p>© 2024 BACKME.COM. ALL RIGHTS RESERVED.</p>
                </div>
                <div class="col-md-6">
                    <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none me-3">PRIVACY POLICY</a>
                    <a href="#" class="text-white text-decoration-none">TERMS OF SERVICE</a>
                </div>
            </div>
        </div>
    </footer>















    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
