@using Microsoft.AspNetCore.Identity
@using FYP_Reward_Based_Crowdfunding_.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<head>

    <link href="~/css/Layout.css" rel="stylesheet" />
</head>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.Email!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a style="background-color: #e53935; border-radius:9px !important" class="nav-link text-white btn me-4 py-2 px-4 login-div" id="login" asp-area="Identity" asp-page="/Account/Login">Login/SignUp</a>
        </li>
    }
</ul>
