@model IEnumerable<FYP_Reward_Based_Crowdfunding_.Models.Campaigns>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Campaigns</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">All Campaigns</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Target Amount</th>
                    <th>Raised Amount</th>
                    <th>Category</th>
                    <th>Deadline</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var campaign in Model)
                {
                    <tr>
                        <td>@campaign.campaign_id</td>
                        <td>@campaign.title</td>
                        <td>@campaign.description</td>
                        <td>PKR @campaign.target_amount</td>
                        <td>PKR @campaign.raised_amount</td>
                        <td>@campaign.category</td>
                        <td>@campaign.deadline.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="/Campaign/DisplayCampaign?id=@campaign.campaign_id" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

